<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Announcements</h1>
  <%= will_paginate %>
  <div>
      <% @announcements.each do |announcement|  %>
          <div class="container">
    <div>
    <h2>Posted by <%= link_to announcement.announcement.user.name, user_profile_path(announcement.announcement.user_id)  %></h2>
       <p>Contenido: <%= announcement.announcement.content%></p>
       <%# <p>Visto: <%= announcement.see%>
       <p>Expira: <%= announcement.announcement.expire%></p>
    </div>
</div>
          <p>
            <%= link_to "Show", announcement_path(announcement.announcement_id), class:"btn btn-info"%>
          </p>
      <% end %>
  </div>
  <%= will_paginate %>
  <div>
      <%= link_to "New Announcement", new_announcement_path, class:"btn btn-outline-primary" %>
  </div>
</div>