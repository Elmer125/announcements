<p style="color: green"><%= notice %></p>
<div class="container">
    <%= render @announcement %>
    <div>
        <% if current_user?(@announcement.user)%>
            <div class="d-flex justify-content-start mt-2">
                <%= link_to "Edit", edit_announcement_path(@announcement), class:"btn btn-primary me-2" %>
                <%= button_to "Destroy", @announcement, method: :delete, class:"btn btn-danger" %>
            </div>
        <% end %>

        <%= link_to "Back", announcements_path, class:"btn btn-outline-secondary mt-2" %>
    </div>
</div>
